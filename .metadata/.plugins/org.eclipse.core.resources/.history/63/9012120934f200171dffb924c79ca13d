package program1;

public class Pattern3 {

	public static void main(String[] args) {
		
		int i,j,k;
		for(i=1;i<=4;i++)
		{
			for(j=i;j<4;j++)
			{
				System.out.print(" ");
			}
			for(k=1;k<=(i*2-1);k++)
			{
				System.out.print("*");
			}
			System.out.print("\n");
			
		}
		for(i=3;i>=1;i--)
		{
			for(j=i;j<=3;j++)
			{
				System.out.print(" ");
			}
			for(k=1;k<=(i*2-1);k++)
			{
				System.out.print("*");
			}
			System.out.print("\n");
			}
		}

	}

}
